@model Tracker_UI.Models.TeamPersonViewModel
@{
    ViewData["Title"] = "Create Team";
    
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<partial name="_Notifications" />

<h4>Create Team</h4>
<hr />

<div class="container">
    <div class="row">

        <div>
            <form method="post" class="offset-md-2 col-md-8">
                <div class="form-group">
                    <label asp-for="Team.TeamName" class="control-label"></label>
                    <input asp-for="Team.TeamName" class="form-control" placeholder="Enter a Team Name" />
                    <span asp-validation-for="Team.TeamName" class="text-danger"></span>
                </div>
                <br />
                <div id="multi_select" class="form-group">
                    <label asp-for="SelectedPeople" class="control-label"></label><br />
                    <select asp-for="SelectedPeople" id="AvailableList" multiple class="form-control multi_select" asp-items="Model.AvailablePeopleForTeam">
                        <option value="" disabled selected hidden>Please Choose...</option>
                    </select>
                    <span asp-validation-for="SelectedPeople" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <button type="submit" value="Create" class="btn btn-primary btn-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                            <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                        </svg>  Create Team
                    </button>
                </div>
            </form>
        </div>


        <div class="addMember">
            <fieldset class="border p-2 offset-md-3 col-md-6">
                <legend class="w-auto">Add New Member</legend>
                <div class="offset-md-1 col-md-10">
                    <form method="post" asp-action="CreatePerson">
                        <div class="form-group">
                            <label asp-for="Person.FirstName" class="control-label"></label>
                            <input asp-for="Person.FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Person.LastName" class="control-label"></label>
                            <input asp-for="Person.LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="Person.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Person.EmailAddress" class="control-label"></label>
                            <input asp-for="Person.EmailAddress" class="form-control" placeholder="Email Address" />
                            <span asp-validation-for="Person.EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Person.CellphoneNumber" class="control-label"></label>
                            <input asp-for="Person.CellphoneNumber" class="form-control" placeholder="Cell Number" />
                            <span asp-validation-for="Person.CellphoneNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group col text-center">
                            <button type="submit" value="Create" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                                </svg>  Create Member
                            </button>
                        </div>
                        <br />
                    </form>
                </div>
            </fieldset>

        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
