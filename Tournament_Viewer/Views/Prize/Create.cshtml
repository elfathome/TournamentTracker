@model Tracker_UI.Models.PrizeViewModel
@{
    ViewData["Title"] = "Create Prize";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<partial name="_Notifications" />

<h4>Create a Prize for the Tournament</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form class="offset-md-4 col-md-10" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="PlaceNumber" class="control-label"></label>
                    <input asp-for="PlaceNumber" class="form-control" placeholder="Enter a number" />
                    <span asp-validation-for="PlaceNumber" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="PlaceName" class="control-label"></label>
                    <input asp-for="PlaceName" class="form-control" placeholder="Enter a name" />
                    <span asp-validation-for="PlaceName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="PrizeAmount" class="control-label"></label>
                    <input asp-for="PrizeAmount" class="form-control" value="0" />
                    <span asp-validation-for="PrizeAmount" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="PrizePercentage" class="control-label"></label>
                    <input asp-for="PrizePercentage" class="form-control" value="0" />
                    <span asp-validation-for="PrizePercentage" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group offset-md-4 col-md-4">
                    <button type="submit" asp-controller="Prize" value="Create" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                            <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                        </svg>  Create Prize
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@*<div>
        <a asp-page="Create">Back to List</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}