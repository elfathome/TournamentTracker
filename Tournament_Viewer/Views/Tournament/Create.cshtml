@model Tracker_UI.Models.TournamentViewModel
@{
    ViewData["Title"] = "Tournament Dashboard";
}

<partial name="_Notifications" />

<h4>Create Tournament</h4>
<hr />


<div class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <form method="post" class="offset-md-2 col-md-8">
                <div class="form-group">
                    <label asp-for="TournamentName" class="control-label"></label>
                    <input asp-for="TournamentName" class="form-control" placeholder="Enter a Tournament Name" />
                    <span asp-validation-for="TournamentName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="EntryFee" class="control-label"></label>
                    <input asp-for="EntryFee" class="form-control" placeholder="Enter an Entry Fee" />
                    <span asp-validation-for="EntryFee" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <span>Selected Teams<a style="float:right;" asp-controller="Team" asp-action="Create">Create Team</a></span>
                    <select asp-for="SelectedTeams" multiple class="form-control multi_select" asp-items="Model.AvailableTeamsForTourny">
                        <option value="" disabled selected hidden>Please Choose...</option>
                    </select>
                    <span asp-validation-for="SelectedTeams" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <span>Selected Prizes<a style="float:right;" asp-controller="Prize" asp-action="Create">Create Prize</a></span>
                    <select asp-for="SelectedPrizes" multiple class="form-control multi_select" asp-items="Model.AvailablePrizesForTourny">
                        <option value="" disabled selected hidden>Please Choose...</option>
                    </select>
                    <span asp-validation-for="SelectedPrizes" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group offset-md-3">
                    <button type="submit" value="Create" class="btn btn-primary btn-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                            <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z" />
                        </svg>  Create Tournament
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


